<%- include('partials/header', { title: 'Home'}) %>
<%- include('partials/navbar', { page: 'Home'}) %>

<%#= JSON.stringify( food ) %>
<% food.sort((a,b)=> a.id-b.id) %>
<div class="container mt-5">
  <form action="/foods/order" method="POST">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Stock</th>
        <th scope="col">Price</th>
        <th scope="col">Type</th>
        <th scope="col">Quantity</th>
      </tr>
    </thead>
    <tbody>
     <% food.forEach(item => { %>
      <tr>
        <input type="hidden" name="id" value="<%= item.id %>">
        <td><%= item.name %></td>
        <td><%= item.stock %><% if(item.stock <= 5) { %>
          <small id="emailHelp" class="form-text  text-danger">* Almost out of stock</small>
        <% }%></td>
        <td><%= item.price %></td>
        <td><%= item.group %></td>
        <td><input type="number" min="0" max="<%= item.stock %>" value="0" name="quantity"></td>
      </tr>
     <% }) %>
    </tbody>

  </table>
  <button type="submit" class="btn btn-block btn-success" onclick="confirm('Are you sure ? ')">Confirm Order</button>
</form>

</div>
<%- include('partials/footer') %>